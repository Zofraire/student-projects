// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== AUTH MODELS ====================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  phone         String?
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
  projects      Project[] @relation("ProjectAuthor")
  createdAt     DateTime  @default(now())
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== PROJECT MODELS ====================

// Categories with parent-child hierarchy
model Category {
  id       String     @id @default(cuid())
  name     String
  slug     String     @unique
  parentId String?
  active   Boolean    @default(true)
  order    Int        @default(0)
  parent   Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children Category[] @relation("CategoryHierarchy")
  projects Project[]  @relation("ProjectCategories")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// Tags for projects
model Tag {
  id       String    @id @default(cuid())
  name     String
  slug     String    @unique
  color    String?   // Optional hex color for UI
  projects Project[] @relation("ProjectTags")
  createdAt DateTime @default(now())
}

// Main Project model
model Project {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String   @db.Text
  summary     String?  // Short summary for cards
  thumbnail   String?  // Cover image URL
  
  // Author/Student info
  authorId    String?
  author      User?    @relation("ProjectAuthor", fields: [authorId], references: [id])
  authorName  String?  // Optional if no user account
  authorEmail String?
  
  // Status
  active      Boolean  @default(true)
  featured    Boolean  @default(false)
  
  // Relations
  categories  Category[]     @relation("ProjectCategories")
  tags        Tag[]          @relation("ProjectTags")
  media       ProjectMedia[]
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime?
}

// Project media (PDFs, images, 3D models, videos)
model ProjectMedia {
  id        String    @id @default(cuid())
  projectId String
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  type      MediaType
  url       String
  filename  String
  title     String?
  order     Int       @default(0)
  
  // For 3D models
  modelFormat String?  // glb, gltf, obj, etc.
  
  // For videos
  videoPlatform String? // youtube, vimeo, local
  videoId       String? // External video ID
  
  createdAt DateTime  @default(now())
}

// Banner for homepage
model Banner {
  id       String  @id @default(cuid())
  image    String
  title    String
  subtitle String?
  url      String?
  active   Boolean @default(true)
  order    Int     @default(0)
}

// ==================== ENUMS ====================

enum Role {
  USER
  ADMIN
}

enum MediaType {
  IMAGE
  PDF
  MODEL_3D
  VIDEO
}
